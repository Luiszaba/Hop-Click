<p id="notice"><%= notice %></p>

<style>
table, th, td {
    border: 1px solid black;
    width: auto;
    height: 30px;
    text-align: center;
    padding: 10px
}
</style>

<h1>Objectives</h1>


<table>
  <thead>
    <tr>
      <th>Assigned to</th>
      <th>Name</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Completed</th>
    </tr>
  </thead>

 
  <tbody>
    <% @objectives.each do |objective| %>
    <tr>
      <td><%= objective.user.name %></td>
      <td><%= objective.name %></td>
      <td><%= objective.description %></td>
      <td><%= objective.due_date.strftime("%B %d, %Y") %></td>
      <td><%= objective.completed %></td>
      <td><%= link_to 'Show', objective %></td>
      <% if current_user %>
      <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
      <td><%= link_to 'Destroy', objective, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
    </tr>
    <% end %>
  
  </tbody>
  
</table>
 
<br>

<strong><%= link_to 'New Objective', new_objective_path %></strong>