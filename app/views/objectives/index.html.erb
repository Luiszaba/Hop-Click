<p id="notice"><%= notice %></p>

<h1>Objectives</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Due Date</th>
    <th>Completed</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @objectives.each do |objective| %>
    <tr>
      <td><%= objective.name %></td>
      <td><%= objective.description %></td>
      <td><%= objective.due_date.strftime("%B %d, %Y") %></td>
      <td><%= objective.completed %></td>
      <td><%= link_to 'Show', objective %></td>
      <% if current_user %>
      <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
      <td><%= link_to 'Destroy', objective, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Objective', new_objective_path %>
